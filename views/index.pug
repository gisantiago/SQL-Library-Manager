extends layout

block content
  .search-container
    input#myInput(type='text', placeholder='Search for books..')
  h1.center= title
  p.center
    a.button(href="/books/new") Create New Book
    table#table
      thead
        tr
          th Title
          th Author
          th Genre
          th Year
      each book in books
        tr
          td
            a(href="/books/" + book.id) #{book.title}
          td #{book.author}
          td #{book.genre}
          td #{book.year}
  p#empty